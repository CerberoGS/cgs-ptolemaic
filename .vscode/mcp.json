{
    "servers": {
        "laravel-boost": {
            "command": "php",
            "args": [
                "artisan",
                "boost:mcp"
            ]
        },
        "admin-insights": {
            "command": "php",
            "args": [
                "artisan",
                "mcp:start",
                "admin-insights"
            ]
        },
        "filesystem": {
            "command": "npx",
            "args": [
                "-y",
                "@modelcontextprotocol/server-filesystem",
                "c:\\laragon\\www\\cgs-ptolemaic"
            ]
        },
        "prism": {
            "command": "php",
            "args": [
                "artisan",
                "prism:mcp"
            ]
        },
        "postgres": {
            "command": "npx",
            "args": [
                "-y",
                "@modelcontextprotocol/server-postgres",
                "postgresql://${env:DB_USERNAME}:${env:DB_PASSWORD}@${env:DB_HOST}:${env:DB_PORT}/${env:DB_DATABASE}"
            ]
        }
    }
}
